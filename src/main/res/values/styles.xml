<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="FinePrint">
    <item name="android:gravity">center</item>
    <item name="android:textStyle">italic</item>
    <item name="android:typeface">serif</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="IncrementButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">48dp</item>
    <item name="android:longClickable">true</item>
  </style>

  <style name="ControlButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_weight">1</item>
    <item name="android:clickable">true</item>
  </style>
  <style name="ControlText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">24sp</item>
    <item name="android:paddingLeft">10dp</item>
  </style>

  <style name="Slider">
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:max">220</item>
    <item name="android:progressDrawable">@android:color/holo_orange_dark</item>
    <item name="android:thumb">@drawable/slider</item>
  </style>

  <!-- The following from http://www.jagsaund.com/blog/2011/11/25/vertical-progress-bar-for-android.html -->
  <style name="Widget">
  </style>
  
  <style name="Widget.ProgressBar">
    <item name="android:indeterminateOnly">true</item>
    <item name="android:indeterminateBehavior">repeat</item>
    <item name="android:indeterminateDuration">3500</item>
    <item name="android:minWidth">48dip</item>
    <item name="android:maxWidth">48dip</item>
    <item name="android:minHeight">48dip</item>
    <item name="android:maxHeight">48dip</item>
  </style>
  
  <style name="Widget.ProgressBar.Vertical">
    <item name="android:indeterminateOnly">false</item>
    <item name="android:progressDrawable">@drawable/vertical_progress_bar</item>
    <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
    <item name="android:minWidth">10dp</item>
    <item name="android:maxWidth">12dip</item>
  </style>
</resources>

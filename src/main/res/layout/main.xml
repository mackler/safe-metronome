<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:orientation="vertical"
	      android:padding="5dp"
	      >
  <!-- Top row of three -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <!-- Includes the numeral indicator and increase & decrease speed buttons -->
    <LinearLayout android:id="@+id/tempo_display"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:layout_weight="1"
		  android:background="@android:color/darker_gray"
		  >
      <Button android:id="@+id/slower_button"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:onClick="slower"
	      android:longClickable="true"
	      android:textStyle="bold"
	      android:textSize="48dp"
	      android:text="-"
	      />
      <LinearLayout
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_weight="1"
	  android:orientation="vertical"
	  >
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    >
	<TextView android:id="@+id/marking"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:gravity="center"
		  android:textStyle="italic"
		  android:typeface="serif"
		  android:layout_alignParentTop="true"
		  />
	<TextView android:id="@+id/tempo"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:layout_alignParentTop="true"
		  android:paddingTop="6dp"
		  android:textSize="48dp"
		  android:gravity="center"
		  android:textStyle="bold"
		  android:text="..."
		  />

	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Adam Mackler"
	    android:paddingTop="40dp"
	    android:textStyle="italic"
	    android:typeface="serif"
	    android:gravity="center"
	    android:layout_below="@id/marking"
	    />

	</RelativeLayout>
      </LinearLayout>
      <Button android:id="@+id/faster_button"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:onClick="faster"
	      android:textStyle="bold"
	      android:textSize="48dp"
	      android:longClickable="true"
	      android:text="+"
	      />
    </LinearLayout>

    <!-- Upper right corner of screen shows ChopsBuilder™ info, either the
         button to activate it if it's not running, or else the target tempo,
         countdown time remaining, and cancel button.-->
    <FrameLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="right"
	android:layout_weight="1"
	>
      <LinearLayout android:id="@+id/chops_button"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:gravity="top|right"
		    >
	<Button
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="ChopsBuilder™"
	    android:onClick="configureChopsBuilder"
	    />
      </LinearLayout>
      <RelativeLayout android:id="@+id/chops_display"
		      android:layout_width="match_parent"
		      android:layout_height="match_parent"
		      android:orientation="vertical"
		      android:padding="5dp"
		      android:visibility="gone"
		      >
	<TextView android:id="@+id/target_tempo_label"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:text="@string/target_tempo"
		  android:paddingRight="18sp"
		  android:layout_alignParentTop="true"
		  android:textSize="18sp"
		  android:layout_alignParentLeft="true"
		  />
	<TextView android:id="@+id/target_tempo"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_toRightOf="@id/target_tempo_label"
		  android:textStyle="bold"
		  android:textSize="18sp"
		  android:layout_alignParentTop="true"
		  />
	<TextView android:id="@+id/time_left_label"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:text="@string/remaining_time"
		  android:textSize="18sp"
		  android:layout_alignParentLeft="true"
		  android:layout_below="@id/target_tempo_label"
		  android:paddingRight="18sp"
		  />
	<TextView android:id="@+id/time_left"
		  android:layout_width="wrap_content"
		  android:textSize="18sp"
		  android:textStyle="bold"
		  android:layout_height="wrap_content"
		  android:layout_below="@id/target_tempo_label"
		  android:layout_toRightOf="@id/time_left_label"
		  />
	<ImageButton android:id="@+id/chops_cancel"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_alignParentRight="true"
		     android:src="@android:drawable/ic_delete"
		     android:onClick="cancelChops"
		     />
      </RelativeLayout>
    </FrameLayout>
  </LinearLayout>

  <!-- The slider for setting the tempo visually -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:layout_weight="1"
      >
    <!-- Tempo range is 32 through 252 BPM
	 Add 32 to the slider value to get BPM -->
    <SeekBar android:id="@+id/seek_bar"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:thumb="@drawable/slider"
	     android:progressDrawable="@android:color/holo_orange_dark"
	     android:max="220"
	     android:layout_below="@id/tempo_display"
	     />

  </LinearLayout>

  <!-- The two big buttons at the bottom of the screen, start/stop and
       set tempo by tapping -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      >
    <Button android:id="@+id/control_button"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:onClick="toggle"
	    android:text="@string/start"
	    android:textAllCaps="true"
	    android:layout_weight="1"
	    android:textSize="36dp"
	    android:background="@android:color/holo_green_light"
	    />
    <TextView android:id="@+id/tap_button"
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:layout_weight="1"
	      android:textSize="36dp"
	      android:text="@string/tap"
	      android:textAllCaps="true"
	      android:background="@android:color/holo_orange_light"
	      android:clickable="true"
	      android:gravity="center"
	      android:onClick="onTap"
	      />
  </LinearLayout>
</LinearLayout>

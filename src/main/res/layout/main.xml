<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:orientation="vertical"
	      android:padding="5dp"
	      >
  <!-- Top row of three -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <!-- Includes the numeral indicator and increase & decrease speed buttons -->
    <LinearLayout android:id="@+id/tempo_display"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:layout_weight="1"
		  android:background="@android:color/darker_gray"
		  >
      <Button android:id="@+id/slower_button"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:onClick="slower"
	      android:longClickable="true"
		android:textStyle="bold"
	      android:textSize="48sp"
	      android:text="-"
	      android:src="@android:drawable/arrow_down_float"
	      />
      <TextView android:id="@+id/tempo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		  android:layout_weight="1"
		android:textSize="48sp"
		android:gravity="center"
		android:textStyle="bold"
		android:text="..."
		/>
      <Button android:id="@+id/faster_button"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:onClick="faster"
		android:textStyle="bold"
	      android:textSize="48sp"
	      android:longClickable="true"
	      android:text="+"
	      android:src="@drawable/numberpicker_up_btn_holo_light"
	      />
    </LinearLayout>
    <TextView android:id="@+id/marking"
	      android:layout_width="match_parent"
	      android:layout_weight="1"
	      android:gravity="top|right"
	      android:layout_height="wrap_content"
	      android:layout_alignParentTop="true"
	      android:layout_alignParentRight="true"
	      />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:layout_weight="1"
      >
    <!-- Tempo range is 32 through 252 BPM
	 Add 32 to the slider value to get BPM -->
    <SeekBar android:id="@+id/seek_bar"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:thumb="@drawable/slider"
	     android:progressDrawable="@android:color/holo_orange_dark"
	     android:max="220"
	     android:layout_below="@id/tempo_display"
	     />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      >
    <Button android:id="@+id/control_button"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:onClick="toggle"
	    android:text="@string/start"
	    android:layout_weight="1"
	    android:textSize="36sp"
	    android:background="@android:color/holo_green_light"
	    />
    <TextView android:id="@+id/tap_button"
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:layout_weight="1"
	      android:textSize="36sp"
	      android:text="@string/tap"
	      android:background="@android:color/holo_orange_light"
	      android:clickable="true"
	      android:gravity="center"
	      android:onClick="onTap"
	      />
  </LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Adam Mackler"
    android:textColor="@android:color/holo_blue_dark"
    android:textStyle="italic"
    android:typeface="serif"
    android:gravity="center"
    />

</LinearLayout>